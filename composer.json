{
    "name": "islandora/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core-composer-scaffold": "^8.8.1",
        "drupal/admin_toolbar": "^1.27",
        "drupal/bear_skin": "^3.0",
        "drupal/bootstrap": "^3.19",
        "drupal/content_browser": "^1.0@alpha",
        "drupal/core": "^8.8.1",
        "drupal/devel": "^2.0",
        "drupal/electra": "^1.1",
        "drupal/facets": "^1.3",
        "drupal/material": "^1.3",
        "drupal/material_admin": "^1.0@alpha",
        "drupal/material_base": "^1.6",
        "drupal/matomo": "^1.7",
        "drupal/mobidic": "^1.0",
        "drupal/pdf": "1.x-dev",
        "drupal/rdfui": "^1.0-beta1",
        "drupal/restui": "^1.16",
        "drupal/robotic": "^1.1",
        "drupal/search_api_solr": "^2.0",
        "drupal/sensible": "^1.0",
        "drupal/solid": "^1.1",
        "drupal/uikit": "^3.9",
        "drupal/views_bulk_edit": "^2.3",
        "drupal/views_slideshow": "^4.6",
        "drush/drush": "^9.0.0",
        "islandora/carapace": "3.0.0",
        "islandora/islandora_defaults": "1.1.1",
        "drupal/auto_entitylabel": "2.1.0-beta1",
        "islandora-rdm/islandora_fits": "dev-master",
        "drupal/rest_oai_pmh": "^1.0",
        "islandora/openseadragon": "1.1.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.2",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.2"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
	"discard-changes": true,
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
	"drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
        }
    }
}
